
.header {
  background: $headerBackgroundColor;
  border-bottom: solid $headerBorderBottomWidth $headerBorderBottomColor;
}

.header-inner {
  position: relative;
}

.site-meta {
  text-align: $siteMetaTextAlignment;
}

.brand {
  position: relative;
  display: inline-block;
  padding: 0 25px;
  color: $brandTextColor;
  background: $brandBackground
  border-bottom: none;
  font-family: $fontLogo;

  the-shape(12px, white, 6px);

  .the-shape {
    margin-right: 5px;
  }
}


.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 36px;
  text-transform: uppercase;
  font-size: 20px;
  font-weight: normal;
}

.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
}

.menu .menu-item {
  display: inline-block;
  margin-left: 20px;

  &:first-child {
    margin-left: 0;
  }

  a {
    display: block;
    color: $colorDeepBlack;
    font-size: 13px;
    text-decoration: none;
    text-transform: capitalize;
    border-bottom: 1px solid white;
    trasition-property: border-color;
    the-transition();

    &:hover {
      border-bottom-color: $colorDeepBlack;
    }
    &::before {
      content: "";
      display: block;
      margin: 0 auto;
      width: 24px;
      height: 24px;
      vertical-align: middle;
    }
  }
}

